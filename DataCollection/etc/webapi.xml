<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">

    <!-- Append payload -->
    <route url="/V1/data-collection/:scope" method="POST">
        <service class="Icao\DataCollection\Api\DataCollectionInterface" method="append"/>
        <resources>
            <resource ref="Icao_DataCollection::write"/>
        </resources>
    </route>

    <!-- Replace payload -->
    <route url="/V1/data-collection/:scope" method="PUT">
        <service class="Icao\DataCollection\Api\DataCollectionInterface" method="replace"/>
        <resources>
            <resource ref="Icao_DataCollection::write"/>
        </resources>
    </route>

</routes>
